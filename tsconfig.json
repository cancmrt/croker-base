{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "lib": ["esnext"],
        "target": "ESNext",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "rootDir": "./",
        "outDir": "./dist"
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}